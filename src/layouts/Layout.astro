---
import Header from '@/components/Header.vue';
import '@/styles/global.css';

const { stickyHeader = false } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>Old-Time Sportsmen</title>
  </head>
  <body class='bg-[url(../assets/images/page-background.jpg)] bg-repeat'>
    <Header
      client:only='vue'
      sticky={stickyHeader}
    />
    <main>
      <slot />
    </main>
  </body>
</html>
